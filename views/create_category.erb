<h1>Create Category</h1>
<form action="/category/create" method="post">
  <div class='form-group'>
    <label for="category">Enter a category</label>
    <input class='form-control' type="text" name="category" placeholder='Mexican'><br>
  </div>

  <h4>Select Recipe(s) to add to this category:</h4>
  <div>
    <% if @recipes.any? %>
      <% @recipes.each do |recipe| %>
        <div class='checkbox'>
          <label>
            <input type='checkbox' name='recipe_ids[]' value='<% recipe.id %>'> <%= recipe.name %>
          </label>
        </div>
      <% end %>
    <% end %>
  </div><br>

  <button type="submit" class='btn btn-info'>Create!</button><br>
  <a href='/'>Take me home tonight</a>
</form>
