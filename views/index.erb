<div class="jumbotron">
  <h1>Cook Book</h1>
</div>

<h2>Categories</h2>
<% @tags.each do |tag| %>
  <li><%=tag.catergory%></li>
<% end %>
<a href='/category/create'>Add a Category</a>

<h2>Recipes</h2>
<% @recipes.each do |recipe| %>
  <li><%=recipe.name%></li>
<% end %>
<a href='/recipe/create'>Add a Recipe</a>

<h2>Ingredients</h2>
<% @ingredients.each do |ingredient| %>
  <li><%=ingredient.item%></li>
<% end %>
<a href='/ingredient/create'>Add an Ingredient</a>
